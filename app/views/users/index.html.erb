<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3">
     <%= render 'users/user_show', user: @user %>
     <%= render 'books/book_new', book: @book %>
    </div>
    <div class = "col-md-8 offset-md-1">
     <h2>Users</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
        <th>image</th>
        <th>name</th>
        </tr>
       </thead>

     <tbody>
      <% @users.each do |user| %>
       <tr>
       <td><%= attachment_image_tag user, :profile_image, size: "60x60", fallback: "no_image.png" %></td>
       <td><%= user.name %></td>
       <td><%= link_to "Show", user_path(user) %></td>
       </tr>
      <% end %>
     </tbody>
    </table>
    </div>
  </div>
</div>